<!--This file is used to display flash messages to the user.-->
<!--It checks if there are any success messages stored in the flash and displays them in a Bootstrap alert box.-->

<!--It checkis if there are any success messages stored in the flash and display them.-->
<% if(success && success.length) { %>
<div class="alert alert-success alert-dismissible fade show mt-3 col-6 offset-3" role="alert">
  <%= success %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<!--It checks if there are any error messages stored in the flash and displays them in a Bootstrap alert box.-->
<% if(error && error.length) { %>
<div class="alert alert-danger alert-dismissible fade show mt-3 col-6 offset-3" role="alert">
  <%= error %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>