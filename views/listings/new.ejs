      <h3>Create a New Listing</h3>
      <form action="/listings" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input name="listing[title]" type="text" placeholder="Add a cachy title" class="form-control" required />
          <div class="valid-feedback">
            Great title!
          </div>
          <div class="invalid-feedback">
            oops! title required.
          </div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" placeholder="Add a beautiful description" class="form-control"
            required></textarea>
          <div class="valid-feedback">
            Nice description!
          </div>
          <div class="invalid-feedback">
            description is required.
          </div>
        </div>
        
        <div class="mb-3">
          <label for="image" class="form-label">Upload Image</label>
          <input name="listing[image]" type="file" class="form-control" required />
        </div>

